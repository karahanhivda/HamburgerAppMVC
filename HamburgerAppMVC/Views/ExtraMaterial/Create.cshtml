@model ExtraMaterialViewModel;
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ekstra Lezzetler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ExtraMaterialName" class="control-label"></label>
                <input asp-for="ExtraMaterialName" class="form-control" />
                <span asp-validation-for="ExtraMaterialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Kategori</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@(ViewBag.Category = new SelectList(ViewBag.Category, "Id", "CategoryName"))">
                    <option>Kategori Seç</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="picture" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

