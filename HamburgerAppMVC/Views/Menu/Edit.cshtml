<h1>Menü Güncelleme</h1>
@model MenuViewModel

@{
    if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Hata"]
        </div>

    }
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="MenuName"> </label>
        <input asp-for="MenuName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"> </label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"> </label>
        <input asp-for="Description" class="form-control" />
    </div>
    <input hidden asp-for="Picture" />
    <div class="form-group">
        @{
            if (ViewBag.PictureName != null)
            {
                <label>Resim Adı: @ViewBag.PictureName</label>
            }
        }
        <br />
        <label asp-for="Picture"> Resim Seç:</label>
        <input asp-for="Picture" type="file" class="form-control" />
    </div>
    <button class="btn btn-primary">GÜNCELLE</button>

</form>

