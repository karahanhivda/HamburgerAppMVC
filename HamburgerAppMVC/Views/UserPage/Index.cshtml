@model List<Menu>

@{
    Layout = "_UserLayout";

    var categories = ViewBag.Categories as List<Category>;
}


<section id="menu" class="menu section">


    <div class="container section-title" data-aos="fade-up">
        <h2>Menülerimiz</h2>
        <p><span>Check Our</span> <span class="description-title">Yummy Menu</span></p>
    </div>

    <div class="container">

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">

            <li class="nav-item">
                <a class="nav-link active show" data-bs-toggle="tab" data-bs-target="#menu-starters">
                    <h4>Tümünü Görüntüle</h4>
                </a>
            </li>
            @foreach (var item in ViewBag.Categories)
            {
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-@item.CategoryName.ToLower().Replace(" ", "-")">
                        <h4>@item.CategoryName</h4>
                    </a>
                </li>
            }
        </ul>


        @* Bütün menülerin yüklendiği yer *@
        <div class="tab-content" data-aos="fade-up" data-aos-delay="200">

            <div class="tab-pane fade active show" id="menu-starters">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Bütün Menü</h3>
                </div>

                <div class="row gy-5">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 menu-item">
                            <img src="~/Images/@item.PictureName" class="menu-img img-fluid" alt="@item.MenuName" />
                            @* <a href="~/Images/@item.PictureName" class="menu-img img-fluid" alt="@item.MenuName"></a> *@
                            <h4>@item.MenuName</h4>
                            <p class="ingredients">
                                @item.Description
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                                <p class="price m-0" style="flex: 1; text-align: center;">
                                    ₺@item.Price
                                </p>
                                <button class="btn btn-outline-danger" data-id="@item.Id" style="flex-shrink: 0;"><i class="bi bi-basket-fill"></i></button>
                            </div>

                        </div>
                    }

                </div>
            </div>



            @* kategorilerine göre extramalzemelerin yüklendiği yer *@
            @foreach (var item in ViewBag.Categories)
            {
                <div class="tab-pane fade" id="menu-@item.CategoryName.ToLower().Replace(" ", "-")">

                    <div class="tab-header text-center">
                        <p>Menu</p>
                        <h3>@item.CategoryName</h3>
                    </div>

                    <div class="row gy-5">
                        @foreach (var itemEx in ViewBag.ExtraM)
                        {
                            if (itemEx.CategoryId == item.Id)
                            {
                                <div class="col-lg-4 menu-item">
                                    <img src="~/Images/@itemEx.Picture" class="menu-img img-fluid" alt="@itemEx.ExtraMaterialName">
                                    <h4>@itemEx.ExtraMaterialName</h4>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="price m-0" style="flex: 1; text-align: center;">
                                            ₺@itemEx.Price
                                        </p>
                                        <button class="btn btn-outline-danger" style="flex-shrink: 0;"><i class="bi bi-basket-fill"></i></button>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            }
        </div>

    </div>

</section>



@section Scripts{
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                var productId = $(this).data("id");
                var productName = $(this).data("name");
                var productPrice = $(this).data("price");

                $.ajax({
                    url: '@Url.Action("AddToCart", "UserPage")',
                    type: 'POST',
                    data: {
                        id: productId,
                        name: productName,
                        price: productPrice
                    },
                    success: function (response) {
                        alert("Ürün sepete eklendi!");
                    },
                    error: function (xhr, status, error) {
                        alert("Bir hata oluştu: " + error);
                    }
                });
            });
        });
    </script>
}